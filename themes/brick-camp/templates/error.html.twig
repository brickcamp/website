{% extends 'partials/base.html.twig' %}
{% set page_title = 'Sorry' %}
{% set page_subtitle = 'The requested page was not found' %}
{% set content_vertical_center = true %}

{% block content %}
    <div class="text-center">
        <div class="row">
            <div class="pb-4 col-12 col-sm-8 mx-auto">
                {{ media['theme://images/error/image.png'].cropResize(400,400).html('404 - Page not found', '404 error', 'img-fluid')|raw }}
            </div>
        </div>
        <div>
            <a class="btn btn-success btn-lg m-2" href="/" title="{{ config.site.title }}">Take me home</a>
            <a class="btn btn-outline-secondary btn-lg m-2" href="/contact/brickup" title="{{ config.site.title }}">Contact me</a>
        </div>
    </div>
{% endblock content %}
