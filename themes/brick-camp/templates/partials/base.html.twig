<!doctype html>
<html class="h-100">
<head>
    {% include "partials/head.html.twig" %}
</head>

<body class="bg-light d-flex flex-column h-100">
{% block body %}
    {% include "partials/header.html.twig" %}

    <main id="content" class="flex-shrink-0 mb-4 {{ content_vertical_center ? 'mt-auto' }}" role="main">
        {% include "partials/intro.html.twig" %}
        
        <div class="container">
            {% block content %}
            {% endblock content %}
        </div>
    </main>
    {% include "partials/footer.html.twig" %}
{% endblock body %}

{% block bottom %}
    {{ assets.js('bottom')|raw }}
{% endblock bottom %}
</body>
</html>