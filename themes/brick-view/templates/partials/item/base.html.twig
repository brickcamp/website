<article class="item type-{{ post.template }} slug-{{ post.slug }} left col-xl-2 col-lg-3 col-md-4 col-sm-6 col-xs-12">

    <figure class="item-image"> 
    {% block item_image %}
        {% if post.header.image %}
            <a href="{{ post.url }}"><img src="{{ post.media[post.header.image].cropResize(300, 300).url }}" width="100%" height="100%" alt={{ post.title }}></a>
        {% endif %}
    {% endblock %}
    </figure>

    <header class="item-header">
    {% block item_header %}
        <h3 class="item-title"><a href="{{ post.url }}">{{ post.title }}</a></h3>
    {% endblock %}
    </header>

    <section class="item-content">
    {% block item_content %}
        {% if post.content %}
            <a href="{{post.url}}"><p>{{ post.content | striptags | truncate(140) }}</p></a>
        {% endif %}
    {% endblock %}
    </section>
    
    <footer class="item-footer">
    {% block item_footer %}
        <time class="item-date" datetime="{{ post.date | date(site.date_short) }}">{{ post.date | date(site.date_short) }}</time>
        {% include "/partials/blog/meta.html.twig" with { 'post': post, 'short_meta': true } %}
    {% endblock %}
    </footer>
</article>