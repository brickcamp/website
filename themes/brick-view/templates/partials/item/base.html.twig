<article class="item type-{{ post.template }} slug-{{ post.slug }} pure-u-sm-1-2 pure-u-lg-1-3 pure-u-xl-1-4">

    <figure class="item-image .pure-img"> 
    {% block item_image %}
        {% if post.header.image %}
            <a href="{{ post.url }}"><img src="{{ post.media[post.header.image].cropResize(500, 500).url }}" width="100%" height="100%" alt={{ post.title }}></a>
        {% endif %}
    {% endblock %}
    </figure>

    <header class="item-header">
    {% block item_header %}
        <h3 class="item-title"><a href="{{ post.url }}">{{ post.title }}</a></h3>
    {% endblock %}
    </header>

    <section class="item-content">
    {% block item_content %}
        {% if post.content %}
            <a href="{{post.url}}"><p>{{ post.content | striptags | truncate(140) }}</p></a>
        {% endif %}
    {% endblock %}
    </section>
    
    <footer class="item-footer">
    {% block item_footer %}
        <time class="item-date" datetime="{{ post.modified | date() }}">{{ post.modified | date() | nicetime }}</time>
        <span class="divider"> | </span>
        <span class="author">{{ page.header.author|default("Brick.camp") }}</span>
    {% endblock %}
    </footer>
</article>