{% extends '/partials/item/base.html.twig' %}

{% block item_content %}
    {% for sub in post.header.content.items %}
        {% if sub|keys|length == 1 and sub|keys|first starts with "@taxonomy" %}
            {% set sub_tax  = sub|keys|first|split('.')|last %}
            {% set sub_term = sub|first %}
            {% include '/partials/section/tax-term.html.twig' with { 
                'tax': sub_tax, 
                'term': sub_term 
            }%}
        {% endif %}
    {% endfor %}
{% endblock %}